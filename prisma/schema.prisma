datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int       @id @default(autoincrement())
  name     String
  email    String    @unique
  articles Article[]
}

model Article {
  id      Int    @id @default(autoincrement())
  title   String
  imgUrl  String
  body    String
  userId  Int
  savedBy User   @relation(fields: [userId], references: [id])
}
